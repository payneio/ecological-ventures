<div class="card bg-light mb-4">
    <h5 class="card-header">Associations</h5>
    <ul class="list-group list-group-flush bg-light">

      <% %w{ventures people ecoregions taxa problems solutions}.each do |rel| %>

        <% if entity.respond_to? rel.to_sym %>
          <li class="list-group-item bg-light">
            <%= render "shared/association", entity: entity, to: rel %>
          </li>
        <% end %>
      
      <% end %>

    </ul>

</div>
