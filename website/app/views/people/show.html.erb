<%= render @person %>


<% if policy(@person).edit? %>
  <div class="btn-group" role="group">
    <%= link_to "Edit", edit_person_path(@person), class: "btn btn-primary" %>
  </div>
<% end %>

<% if policy(@person).destroy? %>
  <p>
    <div class="btn-group">
      <%= button_to "Delete", @person, { method: :delete, class: "btn btn-danger" } %>
    </div>
  </p>
<% end %>