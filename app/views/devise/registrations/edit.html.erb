<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_with(model: resource, url: user_registration_path, method: :put) do |f| %>
  
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="card mb-4">
    <div class="card-body bg-info">
      <div class="mb-3">
        <p>To make any changes to your profile, you will need to enter your current password.</p>
        <%= f.label :current_password, class: "form-label" %>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
      </div>
    </div>
  </div>

      <div class="mb-3">
        <%= f.label "Username", class: "form-label" %>
        <%= f.text_field :username, required: true, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="mb-3">
        <%= f.label :password, class: "form-label" %> <i>(leave blank if you don't want to change it)</i>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label "Time Zone", class: "form-label" %>
        <%= f.time_zone_select :time_zone, nil, {}, { class: "form-control" } %>
      </div>

  <div class="actions mb-4">
    <%= f.submit "Update", class: "btn btn-primary" %>
  </div>
<% end %>

<div class="card mb-4">

  <div class="card-body">
    <h5 class="card-title">Cancel my account</h5>
    Caution: This action is irreversible and will result in <strong>immediate</strong> account deletion.
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %>
  </div>
</div>
