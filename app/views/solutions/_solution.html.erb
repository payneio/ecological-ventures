<div id="<%= dom_id solution %>">
  <p>
    <strong>Name:</strong>
    <%= solution.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= local_assigns[:revision] ? revision.description : solution.description %>
  </p>

  <p>
    <strong>Link:</strong>
    <%= solution.link %>
  </p>

  <p>
    <strong>Cover photo:</strong>
    <%= solution.cover_photo %>
  </p>

  <%= render partial: "shared/associations", object: solution, as: :entity %>

</div>
