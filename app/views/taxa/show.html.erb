<%= render @taxon %>

<% if policy(Taxon).edit? %>
  <div class="btn-group">
    <%= link_to "Edit", edit_taxon_path(@taxon), class: "btn btn-primary" %>
  </div>
<% end %>

<% if policy(Taxon).destroy? %>
  <div class="btn-group">
    <%= button_to "Destroy this species", @taxon, method: :delete, class: "btn btn-danger" %>
  </div>
<% end %>
