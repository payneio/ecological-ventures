<h1>Revisions</h1>

<table class="table table-striped table-responsive">
    <% @revisions.each do |revision| %>
        <tr class="">
            <td>
                <%= link_to polymorphic_path [revision.revisable, revision] do %>
                    <%= dt_s(revision.created_at) %>
                <% end %>
            </td>
            <td>
                <%= revision.user.username %>
            </td>
            <td>
                <%= form_for(revision, :url => revert_revision_path(revision), :method => :put) do |f| %>
                    <%= f.submit "Revert", class: "btn btn-secondary btn-sm" %>
                <% end %>
            </td>
        </tr>
    <% end %>
</table>
